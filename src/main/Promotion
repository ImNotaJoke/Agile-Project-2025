
package main;

public class Promotion {
    public static void main(String[] args) {
        Plateau plateau = new Plateau();
        plateau.initPlateauVierge();
        plateau.placerPiece(1, 0, new Pion(Couleur.BLANC));
        System.out.println(plateau);
        plateau.getPlateau()[1][0].move(plateau, new int[] { 1, 0 }, new int[] { 0, 0 });
        System.out.println(plateau);

        plateau.initPlateauVierge();
        plateau.placerPiece(6, 0, new Pion(Couleur.NOIR));
        System.out.println(plateau);
        plateau.getPlateau()[6][0].move(plateau, new int[] { 6, 0 }, new int[] { 7, 0 });
        System.out.println(plateau);
    }
}